<Window x:Class="SandBox.Convert_Spec_Level.frmClaude"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SandBox.Convert_Spec_Level"
        mc:Ignorable="d"
        Title="frmClaude" Height="300" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Client Name Section -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="Client Name:" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <ComboBox x:Name="cmbClient" Height="25" Width="200" SelectedIndex="0">
                <ComboBoxItem Content="Pulte Homes"/>
                <ComboBoxItem Content="D.R. Horton"/>
                <ComboBoxItem Content="Lennar"/>
                <ComboBoxItem Content="KB Home"/>
                <ComboBoxItem Content="Toll Brothers"/>
                <ComboBoxItem Content="Meritage Homes"/>
            </ComboBox>
        </StackPanel>

        <!-- Spec Level Section -->
        <StackPanel Grid.Row="1">
            <Label Content="Convert to spec level:" FontWeight="Bold" Margin="0,0,0,5"/>
            <StackPanel Margin="20,0,0,0" Orientation="Horizontal">
                <RadioButton x:Name="rbCompleteHome" 
                           Content="Complete Home" 
                           GroupName="SpecLevel" 
                           IsChecked="True" 
                           Margin="0,0,20,0"/>
                <RadioButton x:Name="rbCompleteHomePlus" 
                           Content="Complete Home Plus" 
                           GroupName="SpecLevel"/>
            </StackPanel>
        </StackPanel>

        <!-- Cabinet Height Section -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="MW Cabinet Height:" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <ComboBox x:Name="cmbCabinetHeight" Height="25" Width="100" SelectedIndex="0">
                <ComboBoxItem Content="30&quot;"/>
                <ComboBoxItem Content="33&quot;"/>
                <ComboBoxItem Content="36&quot;"/>
                <ComboBoxItem Content="39&quot;"/>
                <ComboBoxItem Content="42&quot;"/>
            </ComboBox>
        </StackPanel>

        <!-- Buttons Section -->
        <StackPanel Grid.Row="3" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Top"
                   Margin="0,15,0,0">
            <Button x:Name="btnOK" 
                   Content="OK" 
                   Width="75" 
                   Height="25" 
                   Margin="0,0,10,0" 
                   IsDefault="True" 
                   Click="BtnOK_Click"/>
            <Button x:Name="btnCancel" 
                   Content="Cancel" 
                   Width="75" 
                   Height="25" 
                   Margin="0,0,10,0" 
                   IsCancel="True" 
                   Click="BtnCancel_Click"/>
            <Button x:Name="btnHelp" 
                   Content="Help" 
                   Width="75" 
                   Height="25" 
                   Click="BtnHelp_Click"/>
        </StackPanel>
    </Grid>
</Window>